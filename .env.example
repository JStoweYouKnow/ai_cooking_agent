# Environment Configuration Template
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/ai_cooking_agent

# OAuth Configuration (Manus Platform)
OAUTH_AUTHORIZATION_URL=https://your-oauth-provider.com/oauth/authorize
OAUTH_TOKEN_URL=https://your-oauth-provider.com/oauth/token
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/callback

# Session Security
SESSION_SECRET=your_random_session_secret_here_min_32_chars

# LLM Configuration (Gemini 3 â€“ primary AI for the app)
# Get API key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# Optional: model overrides (defaults: gemini-3-flash-preview, gemini-3-pro-preview)
# GEMINI_MODEL=gemini-3-flash-preview
# GEMINI_PRO_MODEL=gemini-3-pro-preview
# Fallbacks (when GEMINI_API_KEY not set): OPENAI_API_KEY, BUILT_IN_FORGE_API_KEY

# Storage Configuration
STORAGE_API_URL=https://your-storage-api.com
STORAGE_API_KEY=your_storage_api_key_here

# Application Configuration
NODE_ENV=development
PORT=3000
ALLOWED_HOSTS=localhost:3000

# Admin Configuration
OWNER_OPEN_ID=your_admin_user_open_id

# Hackathon: Grant premium to dev + judge accounts (comma-separated openIds)
# The owner (OWNER_OPEN_ID) also gets premium. Example:
# HACKATHON_PREMIUM_OPEN_IDS=you@example.com,judge1@hackathon.com,judge2@hackathon.com

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging
LOG_LEVEL=info
