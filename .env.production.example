# Production Environment Configuration
# Use this as a template for Vercel environment variables

# ============================================================================
# DATABASE - Use PlanetScale for production MySQL
# ============================================================================
DATABASE_URL=mysql://user:pass@host.us-east-1.psdb.cloud/ai_cooking_agent?ssl={"rejectUnauthorized":true}

# ============================================================================
# OAUTH CONFIGURATION
# ============================================================================
# Update these URLs to use your production domain
OAUTH_AUTHORIZATION_URL=https://your-oauth-provider.com/oauth/authorize
OAUTH_TOKEN_URL=https://your-oauth-provider.com/oauth/token
OAUTH_CLIENT_ID=your_production_client_id
OAUTH_CLIENT_SECRET=your_production_client_secret
OAUTH_REDIRECT_URI=https://your-domain.vercel.app/api/oauth/callback

# ============================================================================
# SESSION SECURITY
# ============================================================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_production_session_secret_min_32_chars

# ============================================================================
# LLM CONFIGURATION (Google Gemini)
# ============================================================================
LLM_API_KEY=your_production_gemini_api_key
LLM_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# ============================================================================
# STORAGE (AWS S3 or Compatible)
# ============================================================================
# Optional: For image uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-cooking-agent-images

# Alternative: Use Vercel Blob Storage
# BLOB_READ_WRITE_TOKEN=vercel_blob_token

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
ALLOWED_HOSTS=your-domain.vercel.app

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
OWNER_OPEN_ID=your_admin_user_open_id

# ============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================================================
# VERCEL_ANALYTICS_ID=your_analytics_id
# SENTRY_DSN=your_sentry_dsn

# ============================================================================
# OPTIONAL: RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=warn
